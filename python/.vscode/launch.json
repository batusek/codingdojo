        {
            "name": "Leap year tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tooling/leapyeartest.py",
            "console": "integratedTerminal"
        },        
        {
            "name": "Legacy intro tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/legacy_intro/test_legacyintro.py",
            "cwd": "${workspaceFolder}/legacy_intro",
            "console": "integratedTerminal"
        },        
        {
            "name": "Global state tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/global_state/globalstatetest.py",
            "cwd": "${workspaceFolder}/global_state",
            "console": "integratedTerminal"
        },        
        {
            "name": "Refactoring alphabet tests",
            "type": "debugpy",
            "request": "launch",
            "args": ["discover","refactoring_alphabet"],
            "module": "unittest",
            "cwd": "${workspaceFolder}/",
            "console": "integratedTerminal"
        },        
        {
            "name": "Side effect tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/side_effect/test_invoiceitemmanager.py",
            "cwd": "${workspaceFolder}/side_effect",
            "console": "integratedTerminal"
        },        
   ]
